@{ 
    Layout = null;
}

@model Studentski_hotel.Models.Recepcija.DodajUSobuVM
<style>
    #form{
        width:50%;
        margin:auto;
        padding:20px;
    }
    .klasa {
        
        margin: 5px;
        width: 50%;
     
    }
</style>
<div>
    <form id="form" method="Post" asp-action="SnimiUgovor">
