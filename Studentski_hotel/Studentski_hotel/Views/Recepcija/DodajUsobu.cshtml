        </div>
        <div class="form-group">
            <label>Soba : </label><br />
            <select asp-for="SobaID" asp-items="@Model.Soba" class="form-control"></select>

        </div>
        <div class="form-group">
            <label>Broj kartice : </label>
            <select asp-for="BrojKarticeID" asp-items="@Model.BrojKartice" class="form-control"></select>
        </div>
        <div class="d-flex justify-content-start">
            <input class="btn-success klasa" type="submit" value="Snimi" />
            <input class="btn-danger klasa" type="button" value="Prekini" onclick="Zatvori()" />

        </div>
    </form>
</div>
