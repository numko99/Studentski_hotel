@{
    Layout = null;
}
@model Studentski_hotel.Models.Recepcija.PregledSobaVM
<table class="table">
    <thead>
        <tr>
            <th>Soba</th>
            <th>Broj kreveta</th>
            <th>Studenti</th>
        </tr>
        @foreach (var item in Model.Sobe)
        {
    <tr>
        <td>@item.BrojSobe</td>
        @if (item.Popunjena)
        {
            <td style="color:red">@item.BrojKreveta</td>

        }
        else
        {
            <td>@item.BrojKreveta</td>

        }
        <td>@item.Studenti</td>
        <td><button class="btn btn-success" onclick="window.location='/Recepcija/DetaljiPrikazSoba?SobaID='+@item.ID">Pregled</button></td>
    </tr>
        }

    </thead>
</table>