<style>
    #AjaxTabela {
        width: 100%;
    }
</style>
<div style="display:flex;flex-flow:row; justify-content:space-between">
    <div style="width:20%">
        <form >
            <select id="TipOsoblja" onchange="Pretraga()" class="form-control">
                <option value="0">Svi uposlenici</option>
                <option value="1">Recepcioner</option>
                <option value="2">Referent</option>
            </select>
        </form>
    </div>
    <div>
        <button class="btn btn-info" onclick="window.location='/Admin/DodajNastavnika'">Dodaj uposlenika</button>
    </div>
</div>
<div id="AjaxTabela"></div>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
    var Pretraga = () => {
        var indeks = document.getElementById("TipOsoblja").value;
        //var status = document.getElementById("StatusID").value;
        //{ pretraga: $("#InputBox").val(), sort: indeks, Status: status }
        $.get("/Admin/PrikazOsoblja", {tip:indeks}, function (data) {
            $("#AjaxTabela").html(data);
        })
    }
    Pretraga();
</script>